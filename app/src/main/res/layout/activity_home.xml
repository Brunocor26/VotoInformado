<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".activities.HomeActivity">

    <ImageView
        android:id="@+id/profile_image"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/ic_launcher_foreground"
        android:contentDescription="Perfil do Utilizador"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/welcome_message"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Bem-vindo!"
        android:textSize="24sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toTopOf="@id/profile_image"
        app:layout_constraintBottom_toBottomOf="@id/profile_image"
        app:layout_constraintStart_toEndOf="@id/profile_image"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/button_candidatos"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Candidatos"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@id/profile_image"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/button_debates"
        app:layout_constraintVertical_chainStyle="packed"/>

    <Button
        android:id="@+id/button_debates"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Debates"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/button_candidatos"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/button_sondagens" />

    <Button
        android:id="@+id/button_sondagens"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Sondagens"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/button_debates"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/button_noticias" />

    <Button
        android:id="@+id/button_noticias"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="NotÃ­cias"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/button_sondagens"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>