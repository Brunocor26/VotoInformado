<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="@color/app_paper_white">

    <!-- Cabeçalho -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:paddingBottom="20dp">

        <TextView
            android:id="@+id/txtTitulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Datas Importantes"
            android:textColor="@color/app_graphite"
            android:textStyle="bold"
            android:textSize="26sp"
            android:fontFamily="sans-serif-medium"
            android:letterSpacing="0.02"
            android:paddingBottom="6dp"/>

        <Button
            android:id="@+id/btnFiltroData"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Filtrar por data"
            android:layout_gravity="center_horizontal"
            android:padding="12dp"
            android:backgroundTint="@color/app_graphite"
            android:textColor="@color/white"
            android:layout_marginBottom="10dp"/>

        <Button
            android:id="@+id/btnLimparFiltro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Limpar filtro"
            android:layout_gravity="center_horizontal"
            android:backgroundTint="@color/app_green"
            android:textColor="@color/white"
            android:padding="10dp"
            android:layout_marginBottom="15dp"/>

        <View
            android:layout_width="60dp"
            android:layout_height="3dp"
            android:background="@color/app_graphite"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="10dp"
            android:alpha="0.9"/>

        <TextView
            android:id="@+id/txtSubtitulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Debates, entrevistas, prazos de voto antecipado e o dia da eleição"
            android:textColor="@color/app_graphite"
            android:textSize="15sp"
            android:fontFamily="sans-serif-light"
            android:alpha="0.8"
            android:lineSpacingExtra="3dp"
            android:gravity="center"
            android:textAlignment="center"/>
    </LinearLayout>

    <!-- Lista -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerDates"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        android:paddingBottom="16dp"/>
</LinearLayout>
