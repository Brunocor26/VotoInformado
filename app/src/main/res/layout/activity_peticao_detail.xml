<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/detail_titulo_peticao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Título da Petição"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:id="@+id/detail_autor_peticao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Por: Nome do Utilizador"
            android:textSize="14sp"
            android:textColor="@android:color/darker_gray"
            android:layout_marginBottom="16dp"/>

        <ImageView
            android:id="@+id/detail_image_peticao"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginBottom="16dp"
            android:visibility="gone"
            android:scaleType="centerCrop"/>

        <TextView
            android:id="@+id/detail_desc_peticao"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Descrição detalhada da petição aqui..."
            android:textSize="16sp"
            android:layout_marginBottom="16dp"/>

        <TextView
            android:id="@+id/detail_contagem_assinaturas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0 assinaturas"
            android:textStyle="bold"
            android:layout_marginBottom="24dp"/>

        <Button
            android:id="@+id/btn_assinar_peticao"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Assinar Petição"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="16dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Comentários"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_view_comentarios"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:nestedScrollingEnabled="false"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp">

            <EditText
                android:id="@+id/edit_comentario"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:hint="Adicionar um comentário..."/>

            <Button
                android:id="@+id/btn_enviar_comentario"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Enviar"/>
        </LinearLayout>

    </LinearLayout>
</androidx.core.widget.NestedScrollView>