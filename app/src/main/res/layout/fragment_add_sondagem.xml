<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <EditText
            android:id="@+id/etEntidade"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Entidade (ex: Intercampus)" />

        <EditText
            android:id="@+id/etAmostra"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Tamanho da Amostra (ex: 800)"
            android:inputType="number" />

        <EditText
            android:id="@+id/etFimRecolha"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Data Fim Recolha (YYYY-MM-DD)" />

        <EditText
            android:id="@+id/etUniverso"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Universo" />

        <EditText
            android:id="@+id/etMargem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Margem de Erro (ex: 3.5)"
            android:inputType="numberDecimal" />

        <EditText
            android:id="@+id/etConfianca"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nível de Confiança (ex: 0.95)"
            android:inputType="numberDecimal" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Selecione os Partidos/Candidatos (Resultados aleatórios serão gerados)"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/llCandidates"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="8dp" />

        <Button
            android:id="@+id/btnSubmitSondagem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Criar Sondagem" />

    </LinearLayout>
</ScrollView>
