<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="12dp">

    <!-- User Photo -->
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/img_autor_comentario"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginEnd="12dp"
        android:src="@drawable/candidato_generico"
        app:civ_border_color="@color/app_green"
        app:civ_border_width="1dp" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/text_autor_comentario"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Nome do Autor"
                android:textColor="@color/app_green"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/text_data_comentario"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Há 2 horas"
                android:textColor="@color/app_graphite"
                android:textSize="12sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/text_comentario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Este é o texto do comentário."
            android:textSize="14sp" />
    </LinearLayout>
</LinearLayout>