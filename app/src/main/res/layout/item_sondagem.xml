<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="4dp"
    android:layout_marginVertical="6dp"
    app:cardBackgroundColor="?attr/colorSurfaceContainer"
    app:cardElevation="1dp"
    app:strokeWidth="0dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <TextView
            android:id="@+id/text_entidade_sondagem"
            style="@style/TextAppearance.Material3.TitleMedium"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="?attr/colorOnSurface"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="Axios/Ipsos" />

        <TextView
            android:id="@+id/text_datas_sondagem"
            style="@style/TextAppearance.Material3.BodyMedium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textColor="?attr/colorOnSurface"
            app:layout_constraintTop_toBottomOf="@+id/text_entidade_sondagem"
            app:layout_constraintStart_toStartOf="parent"
            tools:text="10/05/2024 - 13/05/2024" />

        <TextView
            android:id="@+id/text_amostra_sondagem"
            style="@style/TextAppearance.Material3.BodySmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:textColor="?attr/colorOnSurface"
            app:layout_constraintTop_toBottomOf="@+id/text_datas_sondagem"
            app:layout_constraintStart_toStartOf="parent"
            tools:text="Amostra: 1025" />

        <!-- Separador -->
        <View
            android:id="@+id/divider"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="?attr/colorOutline"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/text_amostra_sondagem"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <!-- Candidato em 1ยบ -->
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/image_lider_sondagem"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="16dp"
            android:src="@drawable/candidato_generico"
            app:civ_border_color="@color/app_orange"
            app:civ_border_width="2dp"
            app:layout_constraintTop_toBottomOf="@+id/divider"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/text_lider_sondagem"
            style="@style/TextAppearance.Material3.TitleSmall"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:textColor="?attr/colorOnSurface"
            app:layout_constraintTop_toTopOf="@id/image_lider_sondagem"
            app:layout_constraintBottom_toBottomOf="@id/image_lider_sondagem"
            app:layout_constraintStart_toEndOf="@id/image_lider_sondagem"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="Candidato A: 45.5%" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>