<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingVertical="12dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/image_candidato_resultado"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/candidato_generico"
        app:civ_border_width="2dp"
        app:civ_border_color="@color/app_green"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:id="@+id/text_nome_candidato_resultado"
        style="@style/TextAppearance.Material3.BodyLarge"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="8dp"
        android:textColor="@color/app_graphite"
        app:layout_constraintStart_toEndOf="@+id/image_candidato_resultado"
        app:layout_constraintEnd_toStartOf="@+id/text_percentagem_resultado"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Nome do Candidato" />

    <TextView
        android:id="@+id/text_percentagem_resultado"
        style="@style/TextAppearance.Material3.TitleMedium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/app_graphite"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="51.0%" />

    <ProgressBar
        android:id="@+id/progress_bar_resultado"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="0dp"
        android:layout_height="6dp"
        android:layout_marginTop="4dp"
        android:progressDrawable="@drawable/bg_progress_bar"
        app:layout_constraintTop_toBottomOf="@+id/text_nome_candidato_resultado"
        app:layout_constraintStart_toStartOf="@id/text_nome_candidato_resultado"
        app:layout_constraintEnd_toEndOf="parent"
        tools:progress="51" />

</androidx.constraintlayout.widget.ConstraintLayout>